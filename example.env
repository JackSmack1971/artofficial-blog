# Next.js Development Configuration
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1
FORCE_COLOR=1

# Package Manager Preferences  
NPM_CONFIG_PREFER_OFFLINE=true
NPM_CONFIG_AUDIT_LEVEL=moderate
PNPM_HOME=/usr/local/bin

# Development Server Configuration
NEXT_SHARP=1
NEXT_CACHE_DIR=/tmp/.next

# Testing Configuration
CI=true
CYPRESS_CACHE_FOLDER=/tmp/cypress
JEST_WORKER_ID=1

# Performance Monitoring
LIGHTHOUSE_CI=1
BUNDLE_ANALYZE=0

# Proxy Configuration (for external API testing)
NODE_TLS_REJECT_UNAUTHORIZED=0

# Ghost CMS Integration (Setup-only access)
GHOST_API_URL=https://your-ghost-instance.ghost.io
GHOST_CONTENT_API_KEY=your_content_api_key_here
GHOST_ADMIN_API_KEY=your_admin_api_key_here

# Newsletter Service (Fallback option)
CONVERTKIT_API_KEY=your_convertkit_api_key_here

# Error Tracking and Monitoring
SENTRY_DSN=your_sentry_dsn_here
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here

# Analytics (for testing purposes)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=artofficialintelligence.academy

# Development Authentication
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000
