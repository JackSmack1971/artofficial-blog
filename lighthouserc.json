{
  "ci": {
    "collect": {
      "url": ["http://localhost:3000"],
      "numberOfRuns": 1,
      "settings": {
        "preset": "desktop",
        "chromeFlags": "--headless --no-sandbox"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": [
          "error",
          { "minScore": 0.95 }
        ],
        "categories:accessibility": [
          "warn",
          { "minScore": 0.95 }
        ]
      }
    }
  }
}