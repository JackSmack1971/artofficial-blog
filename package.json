{
  "name": "artofficial-intelligence-academy",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "ARTOfficial Intelligence Academy - Premium blog and newsletter platform optimized for performance and quality from day one.",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "test": "jest --coverage --runInBand",
    "test:ci": "jest --coverage --ci --runInBand --detectOpenHandles",
    "coverage:check": "node ./scripts/check-coverage.js",
    "perf": "perf-test",
    "security": "security-audit",
    "analyze": "BUNDLE_ANALYZE=1 next build",
    "prepare": "husky install",
    "lhci:collect": "lhci collect --config=./lighthouserc.json",
    "lhci:assert": "lhci assert --config=./lighthouserc.json",
    "kpi:dry-run": "node scripts/analytics/dry-run-open-rate.ts --openRate=0.35",
    "kpi:verify": "node scripts/ci/verify-kpis.ts",
    "e2e": "playwright test",
    "e2e:install": "playwright install --with-deps",
    "precommit": "lint-staged"
  },
  "engines": {
    "node": ">=18.18.0 || ^20",
    "npm": ">=9"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write",
      "jest --bail --findRelatedTests"
    ]
  },
  "dependencies": {
    "@tryghost/content-api": "^1.12.0",
    "next": "^15.4.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "simple-statistics": "^7.8.8"
  },
  "devDependencies": {
    "@lhci/cli": "^0.13.0",
    "@next/bundle-analyzer": "^14.2.5",
    "@playwright/test": "^1.46.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^14.2.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "autoprefixer": "^10.4.21",
    "depcheck": "^1.4.7",
    "eslint": "^9.9.0",
    "eslint-config-next": "^15.0.0-canary",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "tailwindcss": "^4.1.11",
    "ts-jest": "^29.2.5",
    "typescript": "^5.5.4",
    "wait-on": "^7.2.0"
  }
}
